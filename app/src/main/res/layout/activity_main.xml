<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wuxl.pathanimation.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="正常轨迹动画，点击图片开始动画" />

        <ImageView
            android:id="@+id/anim_path"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/anim_vertor_path" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="\n\n填充色，点击图片开始动画" />

        <ImageView
            android:id="@+id/anim_path_with_fillcolor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/anim_vertor_path_with_fillcolor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="\n\n描边色，点击图片开始动画" />

        <ImageView
            android:id="@+id/anim_path_with_strokeColor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/anim_vertor_path_with_strokeolor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="\n\n当然也可以合在一起" />

        <ImageView
            android:id="@+id/anim_path_all"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/anim_vertor_path_all" />

    </LinearLayout>

</ScrollView>
